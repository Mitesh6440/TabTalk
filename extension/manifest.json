{
  "manifest_version": 3,
  "name": "TabTalk",
  "version": "1.0",
  "description": "Opens a sidebar with a chatbot that can answer questions about the current page.",
  "icons": {
    "16": "icons/TabTalk.png",
    "48": "icons/TabTalk.png",
    "128": "icons/TabTalk.png"
  },
  "action": {
    "default_title": "Click to open sidebar",
    "default_icon": {
      "16": "icons/TabTalk.png",
      "48": "icons/TabTalk.png",
      "128": "icons/TabTalk.png"
    }
  },
  "permissions": ["tabs", "sidePanel"],
  "host_permissions": ["*://*/*"],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
